<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include android:id="@+id/appBar" layout="@layout/app_bar"/>

    <TextView
        android:id="@+id/peopleHelpedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_gap"
        android:layout_marginBottom="@dimen/small_gap"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/medium_size"
        android:text="69 people were heard today."
        android:textStyle="bold|italic"
        android:layout_below="@id/appBar"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLayout"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/talkButton"
            android:layout_width="150dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smallish_gap"
            android:background="@drawable/talk_button"
            android:text="I want to talk"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:onClick="startChat"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/listenButton"
            android:layout_width="150dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smallish_gap"
            android:background="@drawable/listen_button"
            android:text="I want to listen"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:onClick="listenButtonOnClick"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/peopleHelpedTextView"
        android:layout_above="@id/buttonLayout"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="@dimen/small_gap">
        <LinearLayout
            android:id="@+id/feedLayout"
            android:layout_marginLeft="@dimen/medium_gap"
            android:layout_marginRight="@dimen/medium_gap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>
</RelativeLayout>