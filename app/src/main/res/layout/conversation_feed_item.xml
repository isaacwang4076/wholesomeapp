<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/feed_item_border">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/listenerImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/small_gap"/>

    <TextView
        android:id="@+id/listenerTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="LISTENER"
        android:textSize="@dimen/small_size"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=" is talking to someone."
        android:textSize="@dimen/small_size"
        android:textColor="@color/textColor"
        android:gravity="center_vertical"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/talkerTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="someone"
        android:textSize="@dimen/small_size"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:gravity="center_vertical"/>

</LinearLayout>

