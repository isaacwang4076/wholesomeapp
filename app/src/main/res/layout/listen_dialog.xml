<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Become a listener"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="@dimen/large_size"/>

    <TextView
        android:layout_margin="@dimen/small_gap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="As a listener, you'll be occasionally notified when someone needs to talk."
        android:textColor="@color/textColor"
        android:textSize="@dimen/medium_size"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_gap"
        android:layout_marginRight="@dimen/small_gap"
        android:textSize="@dimen/medium_size"
        android:hint="First Name"/>

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/small_gap"/>

    <Button
        android:id="@+id/addPhotoButton"
        android:layout_margin="@dimen/small_gap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add a photo (optional)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/listen_button"
        android:onClick="addPhoto"/>

</LinearLayout>